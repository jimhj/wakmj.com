- content_for :header_css do
  = stylesheet_link_tag 'sign'

.left_container
  .sign_in_panel.large_panel
    .panel_title.sign_in_panel_title
      用户登录
    .form_panel
      = form_tag sign_in_path, :method => 'POST' do
        .blank_li.clearfix
          %span 邮箱:
          %input.white_text{ :type => 'text', :name => 'email' }
        .blank_li.clearfix
          %span 密码:
          %input.white_text{ :type => 'password', :name => 'password' }
        .blank_li.clearfix{ :style => 'margin:0px; font-size:12px;' }
          %span &nbsp;
          %input{ :type => 'checkbox', :name => 'remember_me', :checked => true }
          %label &nbsp; &nbsp; 保持登录状态
        .blank_li.clearfix
          %span &nbsp;
          %a.submit_btn.ml10{ :href => 'javascript:;' } 登录


.right_container
  .notices
    %p
      %a{ :href => sign_up_path } 注册新用户
    %p
      %a{ :href => forgot_password_path } 忘记密码？
    %p
      %a{ :href => '/auth/weibo' } 
        = image_tag 'weibo240.png'      


      

